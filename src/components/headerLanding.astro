---
import Logo from "../assets/logo.png";
---

<header class="max-w-6xl w-full flex flex-row justify-between items-center p-3">
  <div class="w-[8%]">
    <h1>
      <img
        class="w-full h-full inline-block"
        src={Logo}
        alt="Logo"
        loading="lazy"
      />
    </h1>
  </div>

  <nav>
    <ul class="flex flex-row gap-5 text-xl">
      <li>
        <a 
        class="text-white border p-2 rounded  shadow-md shadow-white hover:bg-white hover:text-[rgba(0,0,0,0.8)] transition-all"
        href="#" rel="noreferrer noopener" target="_blank" title="Link"
          >Pricing</a
        >
      </li>
      <li>
        <a 
        class="text-white border p-2 rounded  shadow-md shadow-white hover:bg-white hover:text-[rgba(0,0,0,0.8)] transition-all"
        href="#" rel="noreferrer noopener" target="_blank" title="Link"
          >Products</a
        >
      </li>
      <li>
        <a 
        class="text-white border p-2 rounded  shadow-md shadow-white hover:bg-white hover:text-[rgba(0,0,0,0.8)] transition-all"
        href="#" rel="noreferrer noopener" target="_blank" title="Link"
          >About Us</a
        >
      </li>
      <li>
        <a 
        class="text-white border p-2 rounded  shadow-md shadow-white hover:bg-white hover:text-[rgba(0,0,0,0.8)] transition-all"
        href="#" rel="noreferrer noopener" target="_blank" title="Link"
          >Contact</a
        >
      </li>
    </ul>
  </nav>

  <div class="mr-3">
    <button class="w-[100%] border border-transparent p-2 rounded hover:border-white transition">
      <svg
        class="w-[2em] h-auto fill-violet-500"
        xmlns="http://www.w3.org/2000/svg"
        height="1em"
        viewBox="0 0 448 512"
      >
        <path
          d="M0 96C0 78.3 14.3 64 32 64H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32C14.3 128 0 113.7 0 96zM0 256c0-17.7 14.3-32 32-32H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32c-17.7 0-32-14.3-32-32zM448 416c0 17.7-14.3 32-32 32H32c-17.7 0-32-14.3-32-32s14.3-32 32-32H416c17.7 0 32 14.3 32 32z"
        ></path>
      </svg>
    </button>
  </div>
</header>
